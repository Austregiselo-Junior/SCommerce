<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CommonTitleProduct" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource CommonTitleProductForeground}" />
        <Setter Property="FontWeight" Value="Black" />
    </Style>

    <Style x:Key="CommonText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource CommonTitleProductForeground}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="Description" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource CommonTitleProductForeground}" />
        <Setter Property="FontWeight" Value="ExtraBlack" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
    </Style>

</ResourceDictionary>
